<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ERPChantier.Views"
       x:Class="ERPChantier.Views.ChantierDetailPage"
       Title="Suivi de Chantier"
       Shell.FlyoutBehavior="Flyout"
       Shell.FlyoutBackgroundColor="{StaticResource MessengerWhite}">

    <!-- Menu Flyout -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource MessengerBlue}" 
              HeightRequest="150" 
              Padding="20">
            <StackLayout VerticalOptions="Center">
                <Label Text="🏗️" 
                       FontSize="40" 
                       HorizontalOptions="Center" 
                       TextColor="White" />
                <Label Text="Suivi de Chantier" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="White" />
                <Label Text="Résidence Les Jardins" 
                       FontSize="14" 
                       HorizontalOptions="Center" 
                       TextColor="White" 
                       Opacity="0.8" />
            </StackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Navigation Items -->
    <FlyoutItem Title="📋 Kanban" Route="kanban">
        <ShellContent ContentTemplate="{DataTemplate views:KanbanPage}" />
    </FlyoutItem>

    <FlyoutItem Title="📝 Liste des tâches" Route="tasklist">
        <ShellContent ContentTemplate="{DataTemplate views:TaskListPage}" />
    </FlyoutItem>

    <FlyoutItem Title="📅 Calendrier" Route="calendar">
        <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="👥 Équipe" Route="team">
        <ShellContent ContentTemplate="{DataTemplate views:TeamPage}" />
    </FlyoutItem>

    <FlyoutItem Title="📁 Documents" Route="documents">
        <ShellContent ContentTemplate="{DataTemplate views:DocumentsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="📊 Rapports" Route="reports">
        <ShellContent ContentTemplate="{DataTemplate views:ReportsPage}" />
    </FlyoutItem>

</Shell>
